<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="coursea.project.com.myapplication.MainActivity">


    <LinearLayout
        android:id="@+id/outter_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_quest_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="When is Christmas?"
            android:textAlignment="viewStart" />




            <Button
                android:id="@+id/pervious_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text_quest_id"
                android:text="<< Previous" />

            <Button
                android:id="@+id/next_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/pervious_btn1"
                android:layout_alignTop="@+id/pervious_btn1"

                android:text="Next>>" />

        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/responseLayoutId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="5dp">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It doesn't exitst" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="December 25" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="December 26" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All of the above" />

        <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None of the above" />



    </LinearLayout>

    </LinearLayout>
